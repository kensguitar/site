// Styles for the site
//
// Generate them by installing Stylus and running:
// $ stylus --watch -o assets styles
$containerWidth = 800px

centeredContainer()
    width: $containerWidth
    margin-left: auto
    margin-right: auto
    box-sizing: border-box

    // Basic support for small screens:
    @media screen and (max-width: $containerWidth)
        width: 100%
        padding-left: 10px
        padding-right: 10px

.clearfix:after
    visibility: hidden
    display: block
    font-size: 0
    content: " "
    clear: both
    height: 0

html, body
    margin: 0

a
    color: #C08553
    font-weight: 600
    text-decoration: none

    &:hover
        text-decoration: underline

p
    line-height: 1.6
    margin: 0 0 1.5em

dl
    margin: 0

dt
    font-weight: bold
    line-height: 1.8
dd
    margin-left: 0
    margin-bottom: 1em
    line-height: 1.5

body
    font-family: Palatino, 'Palatino Linotype', Georgia, serif
    -webkit-font-smoothing: antialiased


    > footer
        padding-top: 10px
        padding-bottom: 10px
        background: darken(#C08553, 70%)
        color: white

        a
            float: right
            margin-left: 10px

        > div
            centeredContainer()

.siteHeader
    background-color: #777
    background-size: cover
    background-position: center
    background-image: url(gtr3.jpg)

    .container
        padding-top: 50px
        padding-bottom: 50px

    h1
        margin-bottom: 0
        color: white
        text-shadow: 0 0 2px #777
    h2
        margin-top: 0
        color: #dcb
        text-shadow: 0 0 3px #222
        font-size: 1.2em

.siteNav
    float: right
    margin-top: 37px
    font-size: 1.3em
    text-shadow: 0 0 3px rgba(#000, 0.5)

    @media screen and (max-width: $containerWidth)
        display: none

    a
        margin-left: 20px
        color: white

section > header
    background-color: #777
    background-size: cover
    background-position: center
    padding: 180px 0 0
    box-shadow: 0 6px 10px rgba(#000, 0.5) inset

    h1
        centeredContainer()
        margin: 0 auto
        color: white
        font-size: 1.8em

.container
    centeredContainer()
    padding-top: 40px
    padding-bottom: 80px

    &.intro
        padding-top: 60px

img.ken
    float: left
    margin-right: 40px

    @media screen and (max-width: $containerWidth)
        margin-right: 15px

#faq
    header
        background-image: url(gtr1.jpg)

#contact
    header
        background-image: url(gtr2.jpg)

    .maplink
        display: block
        float: right
        border: 1px solid #ccc

    dt
        line-height: 1.2
